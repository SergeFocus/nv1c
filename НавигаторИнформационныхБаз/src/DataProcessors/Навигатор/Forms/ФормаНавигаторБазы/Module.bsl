&НаКлиенте
Процедура ОтобразитьСтруктуруОбъектаМетаданных(ИдСтроки)
	
	#Область Предусловия
	
	Если Не ЗначениеЗаполнено(ИдСтроки) Тогда
		Возврат;
	КонецЕсли;
	
	#КонецОбласти
	
	СтрокаДерева = СтруктураМетаданныхКонфигурации.НайтиПоИдентификатору(ИдСтроки);
	
	Если СтрокаДерева = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	СтруктураОбъекта = СтруктураОбъектаМетаданных(
		СтрокаДерева.СтруктураМетаданныхКонфигурацииИмяКоллекции, 
		СтрокаДерева.СтруктураМетаданныхКонфигурацииИмя
	);
	
	Если СтруктураОбъекта = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	ПодчиненныеСтроки = СтрокаДерева.ПолучитьЭлементы();
	ПодчиненныеСтроки.Очистить();
	
	Для каждого КлючЗначение Из СтруктураОбъекта Цикл
		
		СтрокаКоллекции = ПодчиненныеСтроки.Добавить();
		СтрокаКоллекции.СтруктураМетаданныхКонфигурацииИмя = КлючЗначение.Ключ;
		СтрокаКоллекции.СтруктураМетаданныхКонфигурацииПредставление = КлючЗначение.Ключ;
		СтрокаКоллекции.СтруктураМетаданныхКонфигурацииСиноним = КлючЗначение.Значение.Коллекция.Синоним;
		СтрокаКоллекции.СтруктураМетаданныхКонфигурацииТипЗаписи = КлючЗначение.Значение.Коллекция.ТипЗаписи;
		СтрокаКоллекции.СтруктураМетаданныхКонфигурацииИмяКоллекции = КлючЗначение.Значение.Коллекция.ИмяКоллекции;
		СтрокаКоллекции.СтруктураМетаданныхКонфигурацииИмяЭлементаКоллекции = КлючЗначение.Значение.Коллекция.ИмяЭлементаКоллекции;
		СтрокаКоллекции.СтруктураМетаданныхКонфигурацииНомерКартинки = КлючЗначение.Значение.Коллекция.НомерКартинки;
		
		СтрокиКоллекции = СтрокаКоллекции.ПолучитьЭлементы();
		
		Для каждого ДанныеЭлементаКоллекции Из КлючЗначение.Значение.ДанныеКоллекции Цикл
			
			СтрокаЭлементаКоллекции = СтрокиКоллекции.Добавить();
			СтрокаЭлементаКоллекции.СтруктураМетаданныхКонфигурацииИмя = ДанныеЭлементаКоллекции.Имя;
			СтрокаЭлементаКоллекции.СтруктураМетаданныхКонфигурацииПредставление = ДанныеЭлементаКоллекции.Имя;
			СтрокаЭлементаКоллекции.СтруктураМетаданныхКонфигурацииСиноним = ДанныеЭлементаКоллекции.Синоним;
			СтрокаЭлементаКоллекции.СтруктураМетаданныхКонфигурацииТипЗаписи = ДанныеЭлементаКоллекции.ТипЗаписи;
			СтрокаЭлементаКоллекции.СтруктураМетаданныхКонфигурацииИмяКоллекции = КлючЗначение.Значение.Коллекция.ИмяКоллекции;
			СтрокаЭлементаКоллекции.СтруктураМетаданныхКонфигурацииИмяЭлементаКоллекции = КлючЗначение.Значение.Коллекция.ИмяЭлементаКоллекции;
			СтрокаЭлементаКоллекции.СтруктураМетаданныхКонфигурацииНомерКартинки = КлючЗначение.Значение.Коллекция.НомерКартинки;
			
			Если Не ДанныеЭлементаКоллекции.ДанныеКоллекции.Количество() = 0 Тогда
				
				СтрокиКоллекцииРеквизиты = СтрокаЭлементаКоллекции.ПолучитьЭлементы();
				
				Для каждого СтруктураРеквизита Из ДанныеЭлементаКоллекции.ДанныеКоллекции Цикл
					
