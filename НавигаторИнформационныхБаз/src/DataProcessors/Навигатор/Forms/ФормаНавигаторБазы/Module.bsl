	Если ДанныеСтроки = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	#КонецОбласти
	
	КолЗаписей = КоличествоЭлементовКоллекцииТипаОбъектаМетаданных(
		ДанныеСтроки.СтруктураМетаданныхКонфигурацииИмяЭлементаКоллекции, 
		ДанныеСтроки.СтруктураМетаданныхКонфигурацииИмя
	);
	ДанныеСтроки.СтруктураМетаданныхКонфигурацииКоличествоЗаписей = КолЗаписей;
	
	Если КолЗаписей = 0 Тогда
		ДанныеСтроки.СтруктураМетаданныхКонфигурацииПредставление = ПодставитьПараметрыВСтроку("%1", ДанныеСтроки.СтруктураМетаданныхКонфигурацииИмя);
	Иначе
		ДанныеСтроки.СтруктураМетаданныхКонфигурацииПредставление = ПодставитьПараметрыВСтроку("%1 (%2)", ДанныеСтроки.СтруктураМетаданныхКонфигурацииИмя, КолЗаписей);
	КонецЕсли;
	
